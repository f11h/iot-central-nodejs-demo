{
  "compilerOptions": {
    "typeRoots": [
      "types",
      "node_modules/@types"
    ],
    "module": "commonjs",
    "lib": [
      "es2018",
      "dom"
    ],
    "target": "es2018",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "outDir": "./dist",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "types",
    "node_modules",
    "**/*.spec.ts"
  ]
}
